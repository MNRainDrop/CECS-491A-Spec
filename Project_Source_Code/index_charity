<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Charities</title>
</head>
<body>
  <div id="charity-list"></div>

  <script>
    // Simulated data for demonstration
    const charities = [
      { name: "Charity A", description: "Description of Charity A" },
      { name: "Charity B", description: "Description of Charity B" },
      { name: "Charity C", description: "Description of Charity C" }
    ];

    // Function to render charity information
    function renderCharities() {
      const charityList = document.getElementById('charity-list');

      // Clear previous content
      charityList.innerHTML = '';

      // Loop through charities and create HTML elements
      charities.forEach(charity => {
        const charityContainer = document.createElement('div');
        charityContainer.innerHTML = `
          <h2>${charity.name}</h2>
          <p>${charity.description}</p>
          <button onclick="handleButtonClick('${charity.name}')">Learn More</button>
        `;
        charityList.appendChild(charityContainer);
      });
    }

    // Function to handle button click
    function handleButtonClick(charityName) {
      // Example: Display more information about the clicked charity
      alert(`You clicked on ${charityName}`);
    }

    // Call the function to render charities when the page loads
    window.onload = renderCharities;
  </script>
</body>
</html>